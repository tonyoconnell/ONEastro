---
import Link from "./ui/link.astro";
---
<div x-data="{scrollBackTop: false}" x-cloak>
 
</div>
<div
  class="bg-black p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-4xl md:text-6xl tracking-tight">
Elevate With AI  </h2>
  <p class="text-slate-400 mt-4 text-lg md:text-xl">
    Bring an army of AI marketing, sales and customer service assistants to life and watch your business soar to new levels.  
  </p>
  <div class="flex mt-5">

    <div id="back2Top" class="bg-gray-300 text-center float-right cursor-pointer p-2 ">
      Select Your AI Assistant
     </div>  </div>
</div>


<script>
{
    const back2Top = document.querySelector('#back2Top');
    back2Top.addEventListener('click', (e) => {
        e.preventDefault();
        window.scroll({ top:0, left:0, behavior: 'smooth'});
    });
}
</script>